<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobApplierDetailActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints,MissingDefaultResource">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarJobAdListActivity"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Applier Details"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/register_title"/>
            </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProfilePic"
                android:layout_marginLeft="140dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circle"
                android:text="     "
                android:textColor="@color/white"
                android:textSize="30sp"
                android:padding="40sp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_marginLeft="140dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/Circular"
                android:background="@color/gray"
                app:strokeWidth="3dp"
                app:strokeColor="@color/gray"
                />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Name:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="57dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/tvApplierName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="43dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvGmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Email:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="57dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/tvApplierEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:text=""
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="43dp"
                 />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Contact Number:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="57dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/tvApplierPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:text="60"

                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="43dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tvResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Resume:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="57dp"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <Button
                    android:id="@+id/tvApplierResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:text="View Resume"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="43dp" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>