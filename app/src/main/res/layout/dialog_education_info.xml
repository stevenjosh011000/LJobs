<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/eduOldLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education Level"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/editOldEduLvl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="false"
        android:visibility="gone"
        android:text="Change Education Level ?"/>

    <Spinner
        android:id="@+id/eduLvlSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/certContainerUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certificate Name"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/dark_blue"
        android:textColorHint="@color/dark_blue"
        android:theme="@style/bottomLineColor"
        app:helperTextTextColor="@color/red"
        style="?attr/textInputFilledStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/certName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/schoolContainerUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="School / Institute"
        android:layout_marginTop="20dp"
        app:hintTextColor="@color/dark_blue"
        android:textColorHint="@color/dark_blue"
        android:theme="@style/bottomLineColor"
        app:helperTextTextColor="@color/red"
        style="?attr/textInputFilledStyle"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/schoolName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/eduOldEndYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Year"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/editOldEndYear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:checked="false"
        android:text="Change End Year ?"/>

    <Spinner
        android:id="@+id/eduYearSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvUpdate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:text="UPDATE"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="CANCEL"
        android:textColor="@color/red"
        android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>
</ScrollView>