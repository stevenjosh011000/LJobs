<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.JobCreateActivity">
    <?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:text="Create Job Ad"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/register_title"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Title:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="57dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:hint="Enter the job title"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="43dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVieweduRequire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Education Requirement:"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="113dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTexteduRequire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:hint="Eg. Diploma level"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="113dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Salary range:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="193dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextSalary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:hint="Eg. RM 1500 - 2000"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="177dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="253dp" />

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Location:"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="253dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:hint="Kuala Lumpur"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="241dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Type:"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="307dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:hint="Eg. Full Time"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="125dp"
                    tools:layout_editor_absoluteY="304dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewJobDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Job Description"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="374dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextMultiLineJobDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Eg. Calclate the sales...etc"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="366dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCompanyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Company Information"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="374dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"></View>

                <EditText
                    android:id="@+id/editTextMultiLineCompanyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Eg. XXX Sdn. Bhd is a company...etc"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="366dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingTop="@dimen/btn_paddingTopBottom"
                    android:paddingBottom="@dimen/btn_paddingTopBottom"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btn_text_size" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>



</LinearLayout>